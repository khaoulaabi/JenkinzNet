@model ProjetPfa.ModelView.ServiceAddVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>creer un service</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Profil.css">
</head>
<body>
    <div class="container-xl px-4 mt-4">
        <nav class="nav nav-borders">
            <a class="nav-link active ms-0" target="__blank">Profile</a>
        </nav>
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Photo de profil</div>
                    <div class="card-body text-center">
                        <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                        <div class="small font-italic text-muted mb-4">JPG ou PNG d'une taille maximale de 5 Mo</div>
                        <button class="btn btn-save-changes" type="button">Télécharger une nouvelle image</button>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <div class="card mb-4">
                    <div class="card-header">Détails du service</div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="small mb-1" for="inputLibelle">Libellé du service</label>
                                <input asp-for="Libelle" class="form-control" id="inputLibelle" placeholder="Veuillez entrer le libellé du service" />
                                <span asp-validation-for="Libelle" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputDescription">Description du service</label>
                                <textarea asp-for="Description" class="form-control" id="inputDescription" rows="4" placeholder="Veuillez entrer la description du service"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputCategorie">Catégorie du service</label>
                                <select asp-for="CategorieId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Libelle"))" class="form-control"></select>
                                <span asp-validation-for="CategorieId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="fileUploadImage">Image</label>
                                <input asp-for="ImageFile" class="form-control" id="fileUploadImage" type="file">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <div class="card-footer d-flex justify-content-between">
                                <button class="btn btn-save-changes" type="submit">Enregistrer</button>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-link">Annuler</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript"></script>
</body>


</html>
